.swiper{
   border: 1px solid #e1e1e1;
    box-shadow: 0px 5px 5px #888888;
  border-radius: 10rpx;
  margin:20rpx;
} 
.swiper-box{
  height: 230rpx;
}
.slide-image{
  width:100%;
  height: 230rpx;
} 
.slide-image image{
  border-radius: 10rpx;
  height: 230rpx;
}

.main-btn{
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}
.main-btn button{
  width:280rpx;
  font-size: 14px;
}


.title{
  text-align: center;
  margin-top: 40rpx;
}


.goods{
  margin-top: 40rpx;
  display: flex;
  flex-wrap: wrap;
}
.single-goods{
  box-sizing: border-box;
  width:50%;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.single-goods image{
  margin:0 auto;
}
.nowPrice{
  font-size: 18px;
  color:red;
  margin-right: 10rpx;
}
.beforePrice{
  text-decoration: line-through;
}

.personHarm .content{
  margin-top: 40rpx;
  display: flex;
}
.personHarm .content .left,.personHarm .content .right{
  flex:1;
  display: flex;
  justify-content: center;
}